---
import Layout from '../layouts/Layout.astro';
import Gallery from '../components/Gallery.astro';
import Nav from '../components/nav.astro';
---

<Layout title="SICK Image Gallery | Codegrid">
  <Nav />
  <Gallery />
</Layout> 

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html,
  body {
    width: 100%;
    height: 100%;
    background: #000;
    overflow: hidden;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    user-select: none;
  }
</style> 